
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin collections: allow read/write for any authenticated user
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    match /roles/{roleId} {
      allow read, write: if request.auth != null;
    }
    match /apps/{appId} {
      allow read, write: if request.auth != null;
    }
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
    match /catalogs_admin/{catalogId} {
        allow read, write: if request.auth != null;
    }
    
    // User-specific collections
    match /favorites/{favoriteId} {
      // Users can only read and write their own favorites.
      // The document ID is structured as `${userId}_${materialCode}`
      allow read, write: if request.auth != null && request.auth.uid == favoriteId.split('_')[0];
    }

    // Request collections
    match /request_headers/{headerId} {
      allow read, write: if request.auth != null;
    }
    match /request_positions/{positionId} {
      allow read, write: if request.auth != null;
    }
  }
}
