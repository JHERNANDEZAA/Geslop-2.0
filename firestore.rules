
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow logged-in users to read and write to the roles collection
    match /roles/{roleId} {
      allow read, write: if request.auth != null;
    }

    // Allow logged-in users to read and write to their own user profile
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow logged-in users to read all user profiles (for admin purposes)
    match /users/{userId} {
        allow read: if request.auth != null;
    }

    // Allow read/write access to counters for authenticated users (for generating IDs)
    match /counters/{counterId} {
        allow read, write: if request.auth != null;
    }

    // Allow logged-in users to manage their favorites
    match /favorites/{favoriteId} {
      allow read, write, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Allow logged-in users to read all favorites (for admin/reporting purposes if needed)
    match /favorites/{favoriteId} {
        allow read: if request.auth != null;
    }

    // Rules for requests
    match /request_headers/{headerId} {
        allow read, write, delete: if request.auth != null;
    }
    match /request_positions/{positionId} {
        allow read, write, delete: if request.auth != null;
    }

    // Allow admin users to manage catalogs
    match /catalogs_admin/{catalogId} {
        allow read, write, delete: if request.auth != null;
    }
  }
}
