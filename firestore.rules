
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the 'favorites' collection for authenticated users
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to request headers and positions for authenticated users
    match /request_headers/{headerId} {
      allow read, create, update, delete: if request.auth != null;
    }

    match /request_positions/{positionId} {
      allow read, create, update, delete: if request.auth != null;
    }
  }
}
