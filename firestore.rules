rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow authenticated users to read/write for now to unblock admin panel.
      // Frontend layout already restricts access to admin pages.
      allow read, write: if request.auth != null;
    }

    match /roles/{roleId} {
      // Allow authenticated users to read/write for now to unblock admin panel.
      allow read, write: if request.auth != null;
    }

    match /apps/{appId} {
      // Allow authenticated users to read for nav purposes.
      allow read: if request.auth != null;
      // Write is open for now, though not used.
      allow write: if request.auth != null;
    }
    
    match /favorites/{favoriteId} {
      // Users can only manage their own favorites
      allow read, write: if request.auth.uid == request.resource.data.userId;
    }

    match /counters/{counterId} {
        // Allow authenticated users to write for now to unblock admin panel.
        allow read, write: if request.auth != null;
    }

    match /request_headers/{headerId} {
      allow read, write: if request.auth != null;
    }

    match /request_positions/{positionId} {
      allow read, write: if request.auth != null;
    }

    match /catalogs_admin/{catalogId} {
        // Allow authenticated users to read/write for now to unblock admin panel.
        allow read, write: if request.auth != null;
    }
  }
}
