rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow users to read and write their own profile.
      // Any authenticated user can read any profile, as admin checks happen in the frontend.
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    match /roles/{roleId} {
      allow read: if request.auth != null;
      // Allow any authenticated user to write. Admin access is controlled by the frontend UI.
      allow write: if request.auth != null;
    }

    match /apps/{appId} {
      allow read: if request.auth != null;
      // Allow any authenticated user to write. Admin access is controlled by the frontend UI.
      allow write: if request.auth != null;
    }
    
    match /favorites/{favoriteId} {
      // Users can only manage their own favorites
      allow read, write: if request.auth.uid == request.resource.data.userId;
    }

    match /counters/{counterId} {
      allow read: if request.auth != null;
      // Allow any authenticated user to write. Admin access is controlled by the frontend UI.
      allow write: if request.auth != null;
    }

    match /request_headers/{headerId} {
      allow read, write: if request.auth != null;
    }

    match /request_positions/{positionId} {
      allow read, write: if request.auth != null;
    }

    match /catalogs_admin/{catalogId} {
      allow read: if request.auth != null;
      // Allow any authenticated user to write. Admin access is controlled by the frontend UI.
      allow write: if request.auth != null;
    }
  }
}
