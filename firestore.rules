
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write access to authenticated users for most collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // More specific rules can be added here if needed, for example:
    match /catalogs_admin/{catalogId} {
      allow read, write: if request.auth != null;
    }

    match /request_headers/{headerId} {
      allow read, write: if request.auth != null;
    }

    match /request_positions/{positionId} {
      allow read, write: if request.auth != null;
    }

    match /favorites/{favoriteId} {
        allow read, write: if request.auth != null;
    }

    match /counters/{counterId} {
        allow read, write: if request.auth != null;
    }
  }
}
