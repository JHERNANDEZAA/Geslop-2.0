rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow authenticated users to manage their requests
    match /request_headers/{headerId} {
      allow read, write: if request.auth != null;
    }

    match /request_positions/{positionId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to manage their favorites
    match /favorites/{favoriteId} {
        allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to manage admin catalogs
    match /catalogs_admin/{catalogId} {
        allow read, write: if request.auth != null;
    }

    // Allow authenticated users to manage roles
    match /roles/{roleId} {
        allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to access counters
    match /counters/{counterId} {
        allow read, write: if request.auth != null;
    }
  }
}
