rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a request is sent to SAP
    function isRequestSentToSap(requestId) {
      return get(/databases/$(database)/documents/request_headers/$(requestId)).data.sentToSap == 'X';
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /favorites/{favoriteId} {
      allow read, create, delete: if request.auth != null;
    }
    
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }

    match /request_headers/{headerId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && !isRequestSentToSap(headerId);
    }
    
    match /request_positions/{positionId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && !isRequestSentToSap(request.resource.data.requestId);
    }
  }
}
    